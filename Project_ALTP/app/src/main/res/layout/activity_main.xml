<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="AI LÀ TRIỆU PHÚ"
        android:textColor="@color/white"
        android:clickable="true"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_mainbox"
        android:layout_width="260dp"
        android:layout_height="322dp"
        android:layout_margin="12dp"
        android:background="@drawable/box_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_newgame"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/button"
            android:text="GAME MỚI"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_highscore"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button"
            android:text="BẢNG XẾP HẠNG"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_newgame" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_infogame"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:text="THÔNG TIN"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_highscore" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_settings"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/mini_button"
        android:foreground="@mipmap/setting"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_mainbox"
        app:layout_constraintStart_toStartOf="@+id/layout_mainbox"
        app:layout_constraintTop_toBottomOf="@+id/layout_mainbox" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_exit"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/mini_button"
        android:foreground="@mipmap/exit"
        android:onClick="Exit"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_mainbox"
        app:layout_constraintEnd_toEndOf="@+id/layout_mainbox"
        app:layout_constraintTop_toBottomOf="@+id/layout_mainbox" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>