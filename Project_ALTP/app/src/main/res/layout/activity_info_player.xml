<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img"
    tools:context=".InfoPlayerActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_return"
        android:layout_width="57dp"
        android:layout_height="41dp"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/return_btn"
        android:drawableStart="@android:drawable/ic_menu_revert"
        android:gravity="start"
        android:padding="12dp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="294dp"
        android:layout_height="52dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/icon_settings"
        android:ems="10"
        android:fontFamily="@font/inter_black"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:text="Tên: "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <EditText
        android:id="@+id/edt_habit"
        android:layout_width="294dp"
        android:layout_height="52dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/icon_settings"
        android:ems="10"
        android:fontFamily="@font/inter_black"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:text="Sở thích: "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_name" />

    <TextView
        android:id="@+id/tv_record"
        android:layout_width="294dp"
        android:layout_height="52dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/icon_settings"
        android:fontFamily="@font/inter_black"
        android:gravity="center|start"
        android:paddingLeft="15dp"
        android:text="Thành tích cao nhất:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_habit" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="117dp"
        android:layout_height="120dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="147dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_acceptinfo"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="159dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="164dp"
        android:background="@drawable/button"
        android:fontFamily="@font/inter_black"
        android:text="Lưu"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_record" />


</androidx.constraintlayout.widget.ConstraintLayout>