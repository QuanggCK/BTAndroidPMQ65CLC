<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img"
    tools:context=".PLayActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_setting"
        android:layout_width="57dp"
        android:layout_height="41dp"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/icon_settings"
        android:drawableStart="@mipmap/setting"
        android:gravity="start"
        android:padding="12dp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="363dp"
        android:layout_height="130dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_currentbonus"
        app:srcCompat="@drawable/question" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_black"
        android:text="Câu hỏi:"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/edt_namequestion"
        android:layout_width="335dp"
        android:layout_height="81dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:fontFamily="@font/inter_black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3" />

    <TextView
        android:id="@+id/tv_a"
        android:layout_width="363dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/mini_button"
        android:ems="10"
        android:fontFamily="@font/inter_black"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        android:text="A:"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/tv_d"
        android:layout_width="363dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/mini_button"
        android:ems="10"
        android:fontFamily="@font/inter_black"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        android:text="D:"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_c" />

    <TextView
        android:id="@+id/tv_c"
        android:layout_width="363dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/mini_button"
        android:ems="10"
        android:fontFamily="@font/inter_black"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        android:text="C:"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_b" />

    <TextView
        android:id="@+id/tv_b"
        android:layout_width="363dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/mini_button"
        android:ems="10"
        android:fontFamily="@font/inter_black"
        android:textSize="16dp"
        android:gravity="start|center_vertical"
        android:paddingStart="15dp"
        android:text="B:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_a" />

    <TextView
        android:id="@+id/tv_currentbonus"
        android:layout_width="132dp"
        android:layout_height="51dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/mini_button"
        android:fontFamily="@font/inter_black"
        android:gravity="center|top"
        android:paddingTop="7dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_currentquestion" />

    <TextView
        android:id="@+id/tv_currentquestion"
        android:layout_width="132dp"
        android:layout_height="51dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mini_button"
        android:fontFamily="@font/inter_black"
        android:gravity="center"
        android:text="Câu"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/btn_setting"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>