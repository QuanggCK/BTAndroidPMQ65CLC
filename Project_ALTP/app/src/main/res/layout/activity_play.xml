<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img"
    tools:context=".PLayActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_pause"
        android:layout_width="57dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/icon_settings"
        android:drawableStart="@android:drawable/ic_media_pause"
        android:gravity="start"
        android:padding="12dp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_help_toggle"
        android:layout_width="57dp"
        android:layout_height="41dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/mini_button"
        android:fontFamily="@font/inter_black"
        android:text="SOS"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_lifelines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:translationZ="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/btn_help_toggle"
        app:layout_constraintStart_toStartOf="@+id/btn_help_toggle"
        app:layout_constraintTop_toBottomOf="@+id/btn_help_toggle">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_5050"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/mini_button"
            android:fontFamily="@font/inter_black"
            android:text="50:50"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_count_5050"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Còn: 2"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ratechoose"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/mini_button"
            android:fontFamily="@font/inter_black"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_count_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Còn: 2"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_currentquestion"
        android:layout_width="132dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/mini_button"
        android:fontFamily="@font/inter_black"
        android:gravity="center"
        android:text="Câu"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_help_toggle"
        app:layout_constraintStart_toEndOf="@+id/btn_pause"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_currentbonus"
        android:layout_width="132dp"
        android:layout_height="60dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/mini_button"
        android:fontFamily="@font/inter_black"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:translationY="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_currentquestion" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_currentbonus"
        app:srcCompat="@drawable/question" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_black"
        android:text="Câu hỏi:"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/edt_namequestion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/inter_black"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_a"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/mini_button"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/inter_black"
        android:gravity="center"
        android:paddingStart="15dp"
        android:text="A"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/tv_b"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/mini_button"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/inter_black"
        android:gravity="center"
        android:paddingStart="15dp"
        android:text="B"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_a" />

    <TextView
        android:id="@+id/tv_c"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/mini_button"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/inter_black"
        android:gravity="center"
        android:paddingStart="15dp"
        android:text="C"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_b" />

    <TextView
        android:id="@+id/tv_d"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/mini_button"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/inter_black"
        android:gravity="center"
        android:paddingStart="15dp"
        android:text="D"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_c" />

</androidx.constraintlayout.widget.ConstraintLayout>