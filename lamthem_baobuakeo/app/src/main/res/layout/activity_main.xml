<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/salmon"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_rock1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/circle_bg"
            android:foreground="@drawable/rock_scaled"
            android:foregroundGravity="center"
            android:padding="0dp" />

        <Button
            android:id="@+id/btn_paper1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/circle_bg"
            android:foreground="@drawable/paper_scaled"
            android:foregroundGravity="center"
            android:padding="0dp" />

        <Button
            android:id="@+id/btn_scissor1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/circle_bg"
            android:foreground="@drawable/scissor_scaled"
            android:foregroundGravity="center"
            android:padding="0dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="122dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_replay"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btn_rock2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/circle_bg"
            android:foreground="@drawable/rock_scaled"
            android:foregroundGravity="center"
            android:padding="0dp" />

        <Button
            android:id="@+id/btn_paper2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/circle_bg"
            android:foreground="@drawable/paper_scaled"
            android:foregroundGravity="center"
            android:padding="0dp" />

        <Button
            android:id="@+id/btn_sicssor2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/circle_bg"
            android:foreground="@drawable/scissor_scaled"
            android:foregroundGravity="center"
            android:padding="0dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="191dp"
        android:layout_height="100dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="127dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btn_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="160dp"
        android:text="Replay ?"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result" />

</androidx.constraintlayout.widget.ConstraintLayout>