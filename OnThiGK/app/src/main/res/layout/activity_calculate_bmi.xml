<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculateBMIActivity"
    android:background="#FFFFFF">

    <!-- HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_bg"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:background="@drawable/header_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleBMI"
            android:layout_width="239dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="Tính chỉ số BMI"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toTopOf="@id/logo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- MAIN CONTENT -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Cân nặng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cân nặng (kg)"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginBottom="10dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_weight"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtWeight"
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:background="@drawable/corner"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:gravity="center"
                    android:hint="Nhập cân nặng (kg)"
                    android:inputType="numberDecimal"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Chiều cao -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chiều cao (m)"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginBottom="10dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_height"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtHeight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="Nhập chiều cao (m)"
                    android:inputType="numberDecimal"
                    android:textSize="20sp"
                    android:background="@drawable/corner"
                    android:drawableLeft="@android:drawable/ic_menu_edit" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nút tính BMI -->
            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_marginBottom="25dp"
                android:text="Tính BMI"
                android:backgroundTint="#A5CCF8"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp" />

            <!-- Kết quả -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/output_bmi"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtResult"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:enabled="false"
                    android:textSize="40sp"
                    android:background="@drawable/corner" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nút quay lại -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#183A6E"
                android:drawableLeft="@drawable/arrow_right_icon"
                android:text="Quay lại"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
